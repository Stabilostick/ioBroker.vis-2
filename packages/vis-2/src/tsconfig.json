{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "checkJs": false,
    "noEmit": false,
    "outDir": "./build",
    "sourceMap": true,
    "sourceRoot": "./src",
    "noImplicitAny": true,
    "lib": [
      "es2018",
      "DOM"
    ],
    "jsx": "react",
    "types": [
      "@iobroker/types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": ["./**/*"]
}